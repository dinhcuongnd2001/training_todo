datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TodoStatus {
  CLOSE 
  TODO 
  BACKLOG 
}

enum Role {
  AUTHOR
  USER
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name  String
  password String
  todos Todo[]
  assignees_todo Assignee_Todo[]
}

model Todo {
  id Int @id @default(autoincrement())
  name String @unique
  score String 
  desc String 
  status TodoStatus
  dueDate String
  author User @relation(fields: [authorId], references: [id])
  authorId  Int
  assignees_todo Assignee_Todo[]
}

model Assignee_Todo {
  user User @relation(fields: [userId], references: [id])
  userId Int
  todo Todo @relation(fields: [todoId], references: [id])
  todoId Int
  @@unique([userId, todoId])
}